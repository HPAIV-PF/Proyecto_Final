<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_pink"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="406dp"
        android:layout_height="546dp"
        android:divider="@drawable/divider"
        android:gravity="center"
        android:orientation="vertical"
        android:showDividers="middle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/piggy_pink"
            android:fontFamily="@font/roboto_condensed_bold"
            android:text="PROYECTO FINAL"
            android:textAlignment="center"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/textCalc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/misty_rose"
            android:fontFamily="@font/roboto_condensed_bold"
            android:text="SENSORES EN ANDROID"
            android:textAlignment="center"
            android:textSize="34sp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/android_sensors" />

        <TextView
            android:id="@+id/textNom1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/misty_rose"
            android:fontFamily="@font/roboto_condensed_bold"
            android:text="MARIA ALEJANDRA BECERRA 8-937-67"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textNom2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/misty_rose"
            android:fontFamily="@font/roboto_condensed_bold"
            android:text="MARIA LAURA FERNANDEZ 8-928-1741"
            android:textAlignment="center"
            android:textSize="20sp" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>